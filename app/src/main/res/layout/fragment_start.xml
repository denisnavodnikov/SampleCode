<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.start.StartFragment">


    <ImageView
        android:id="@+id/logo_karagatan_image_view"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@color/primary_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo_big_size" />

    <TextView
        android:id="@+id/chose_islands_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_hello_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_karagatan_image_view" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_of_islands_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chose_islands_text_view"
        tools:listitem="@layout/layout_island_list_item"/>


</androidx.constraintlayout.widget.ConstraintLayout>